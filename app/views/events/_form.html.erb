<div class="container">
  <%= simple_form_for(@event) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.association :user, :as => :hidden, :input_html => { :value => current_user.id } %>
      <div class="row">
        <div class="col">
          <%= f.association :subject, label: 'Sujet' %>
        </div>
        <div class="col">
          <%= f.association :si, label: 'S.I' %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= f.association :priority, label: 'Criticité' %>
        </div>
        <div class="col">
          <%= f.association :category, label: 'Catégorie' %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= f.input :start_date, label: 'Date de début', :as => :date, html5: true %>
        </div>
        <div class="col">
        <%= f.input :end_date, label: 'Date de fin', :as => :date, html5: true %>
        </div>
      </div>
      <%= f.input :description %>
      <div class="row">
        <div class="col">
          <%= f.input :recurrent, label: 'Événement récurrent' %>
        </div>
        <div class="col">
          <%= f.input :disable, label: 'Archiver' %>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Ajouter', class:'btn btn-primary btn-block mb-3' %>
      <% if params['action'] == 'edit' %>
      <%= link_to fa_icon('trash')+' Supprimer', @event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-block mt-3" %>
      <% end %>
    </div>
  <% end %>
</div>
