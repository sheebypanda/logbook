  <%= link_to 'Ajouter un sujet', new_subject_path, class: 'btn btn-primary' %>

  <table class="table table-hover table-borderless">
    <thead>
      <tr>
        <th>Identifiant</th>
        <th>Nom</th>
        <th>Identifiant du parent</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @subjects.each do |subject| %>
        <tr>
          <td><%= subject.id %></td>
          <td><%= subject.name %></td>
          <td><%= subject.parent_id %></td>
          <td><%= link_to 'Modifier', edit_subject_path(subject) %></td>
          <td><%= link_to 'DÃ©truire', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
