<p id="notice"><%= notice %></p>

<h1>Sis</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Trigram</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sis.each do |si| %>
      <tr>
        <td><%= si.name %></td>
        <td><%= si.trigram %></td>
        <td><%= link_to 'Show', si %></td>
        <td><%= link_to 'Edit', edit_si_path(si) %></td>
        <td><%= link_to 'Destroy', si, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

